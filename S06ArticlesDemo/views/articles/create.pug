extends layout

block content
  h1= title
  p Welcome to #{title}
  h1
    a(href="/articles") Back to List Article
  div
    form(action="/articles/create", method="post")
        |Title
        input(type="text", name="title")
        br
        br
        |Content
        textarea(name="content", cols="80", rows="10") 
        br
        br
        input(type="submit", value="Create")
    
  