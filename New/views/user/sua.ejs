<div class="p-register">
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h1>Sửa tài khoản</h1>
                <form action="/user-sua-form/<%= tv.id %>" method="POST">
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Username</label>
                        <input type="text" class="form-control" value="<%= tv.username %>" name="username">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Email address</label>
                        <input type="email" class="form-control" value="<%= tv.email %>"name="email">
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Password</label>
                            <input type="password" class="form-control" value="<%= tv.password %>"name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Sửa thành viên</button>
                </form>
            </div>
        </div>
    </div>
</div>